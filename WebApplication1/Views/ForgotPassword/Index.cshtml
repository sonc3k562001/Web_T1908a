@model ForgotPasswordViewModel
<h2>
    ForgotPassword
</h2>


<hr/>
<div class="row">
    <div class="col-12">
        <form method="post">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>