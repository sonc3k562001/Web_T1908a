@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}


<environment>
    <link rel="stylesheet" href="/css/login.css" />
</environment>



<div class="info-login">
    <div class="container">
        <div class="row">
            <div class="col-md-7"></div>
            <div class="col-md-5 information">
                <h2 class="text-center">Login</h2>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email">Name or Email Address:</label>
                        <input type="text" asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Password:</label>
                        <input type="password" asp-for="Input.Password" class="form-control" />
                        <a asp-controller="ForgotPassword" asp-action="Index">Forgot password?</a>
                    </div>
                    <div class="form-group submit">
                        <input type="submit" class="btn btn-danger btn-md" value="Login" />
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
